<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
                             https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

  <!-- Login Servlet -->

  <servlet>
    <servlet-name>PlaceOrderServlet</servlet-name>
    <servlet-class>servlets.PlaceOrderServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>PlaceOrderServlet</servlet-name>
    <url-pattern>/place-order</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>servlets.LoginServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <!-- Register Servlet -->
  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>servlets.RegisterServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>servlets.LogoutServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet>
  <servlet-name>CakeServlet</servlet-name>
  <servlet-class>servlets.CakeServlet</servlet-class>
</servlet>

  <servlet-mapping>
    <servlet-name>CakeServlet</servlet-name>
    <url-pattern>/cake</url-pattern>
  </servlet-mapping>


  <servlet-mapping>
    <servlet-name>CartServlet</servlet-name>
    <url-pattern>/cart</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>CartServlet</servlet-name>
    <servlet-class>servlets.CartServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>RemoveFromCartServlet</servlet-name>
    <url-pattern>/remove-from-cart</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>RemoveFromCartServlet</servlet-name>
    <servlet-class>servlets.RemoveFromCartServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>CartQuantityServlet</servlet-name>
    <servlet-class>servlets.CartQuantityServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>CartQuantityServlet</servlet-name>
    <url-pattern>/cart-quantity</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AdminOrdersServlet</servlet-name>
    <servlet-class>servlets.AdminOrdersServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminOrdersServlet</servlet-name>
    <url-pattern>/admin/orders</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>UpdateOrderStatusServlet</servlet-name>
    <servlet-class>servlets.UpdateOrderStatusServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UpdateOrderStatusServlet</servlet-name>
    <url-pattern>/updateOrderStatus</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>UserOrdersServlet</servlet-name>
    <servlet-class>servlets.UserOrdersServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>UserOrdersServlet</servlet-name>
    <url-pattern>/user/orders</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AdminUsersServlet</servlet-name>
    <servlet-class>servlets.AdminUsersServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>AdminUsersServlet</servlet-name>
    <url-pattern>/admin/users</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>SubmitReviewServlet</servlet-name>
    <servlet-class>servlets.SubmitReviewServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SubmitReviewServlet</servlet-name>
    <url-pattern>/submitReview</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AdminFeedbackServlet</servlet-name>
    <servlet-class>servlets.AdminFeedbackServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminFeedbackServlet</servlet-name>
    <url-pattern>/admin/feedbacks</url-pattern>
  </servlet-mapping>

</web-app>
